{
    "references": [
        {
            "path": "./tsconfig.node.json"
        },
        {
            "path": "./tsconfig.app.json"
        }
    ],
    "compilerOptions": {
        "declaration": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "allowJS": true,
}